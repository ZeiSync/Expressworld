extends ../layout/common

block content
  .container
    h1.my-2 Login

    if errors
      each error in errors
        .alert.alert-danger.w-25= error
    form(action="/auth/login", method="POST")
      .form-group
        label(for="email") Email: 
        input#email(type="text" name="email" class="form-control w-25" value=values ? values.name : "")
      .form-group
        label(for="password") Password: 
        input#password(type="password" name="password" class="form-control w-25" value=values ? values.pass : "")
      button(class="btn btn-outline-primary") Login