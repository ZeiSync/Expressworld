extends ../layout/common

block content
  h1 New user
  if errors
      each error in errors
        .alert.alert-danger= error
  form(action="/users/create" method="POST" style=("display:flex; flex-direction: column;"))
    .form-group
      lable Name:
      input.form-control(type="text", name="name" value=name)
    .form-group
      lable Email:
      input.form-control(type="email", name="email" value=email)
    .form-group
      lable Password:
      input.form-control(type="password", name="password" value=password)

    button.btn.btn-outline-primary(style=("margin-top:1rem")) Create