extends ../layout/common

block content  
  h1 Transactions
  if errors
      each error in errors
        .alert.alert-danger= error
  a.btn.btn-outline-primary.mb-2(href="/transactions/create") New
  table(class="table")
      thead
        tr
          th(scope='col') Books
          th(scope='col') User
          th(scope='col') Action
      tbody
       each transaction in transactions
         tr
           td= transaction.book
           td= transaction.user
           if transaction.isComplete
             td
              a.btn.btn-outline-primary(href="/transactions/"+ transaction.id +"/complete") Done
           else
             td
               a.btn.btn-outline-primary(href="/transactions/"+ transaction.id +"/complete") NotDone