extends ../layout/common

block content
  h1 Transaction create

  form(action="/transactions/create" method="POST" style=("display:flex; flex-direction: column;"))
    .form-group
      label(for="books")
      select#books.form-control(name="bookId")
        each book in books
          option(value=book.id)= book.title
    .form-group
      label(for="users")
      select#users.form-control(name="userId")
        each user in users
          option(value=user.id)= user.name
    button.btn.btn-outline-primary Create
    
    